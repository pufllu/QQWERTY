<Page x:Class="QQWERTY.MainScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QQWERTY"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainScreen" Background="#004165">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1">
            <Button Content="Мастера" Margin="15" Click="GoMaster" Name="MasterButton"/>
            <Button Content="Клиенты" Margin="15" Click="GoClient" Name="ClientButton"/>
            <Button Content="Оборудование" Margin="15" Click="GoOrder" Name="OrderButton"/>
            <Button Content="Запчасти" Margin="15" Click="GoAccessories" Name="AccessoriesButton"/>
        </StackPanel>
        <Image Source="C:\Users\Данил\Desktop\Практика\logo.png" Stretch="Fill"/>
        <Frame x:Name="FrameMaster" Grid.Column="1" Grid.RowSpan="2"/>
    </Grid>
</Page>
